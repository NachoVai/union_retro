<section>
    <div class="card contact shadow">
        <div class="card-body contact-body">
            <% flash.each do |type, msg| %>
                <div class="alert alert-success">
                    <%= msg %>
                </div>
            <% end %>
            <h1 class="card-title">Contacto</h1>
            <h3>DÃ©jenos un mensaje</h3><br>
            <%= form_with(model: @contact, local: true) do |form| %>
                <div class="mb-3">
                    <%= form.label :nombre, class:"form-label"%>
                    <%= form.text_field :name, class:"form-control"%>
                </div>
                <div class="mb-3">
                    <%= form.label :email, class:"form-label"%>
                    <%= form.text_field :email, class:"form-control"%>
                    <div id="emailHelp" class="form-text">No compartiremos tu email con nadie mas.</div>
                </div>
                <div class="mb-3">
                    <%= form.label :mensaje, class:"form-label"%>
                    <%= form.text_area :message, class:"form-control"%>
                </div>
                <div>
                    <%= form.submit "Enviar", :class => "btn btn-primary"%>
                </div>
            <%end%>
        </div>
    </div>
</section>

